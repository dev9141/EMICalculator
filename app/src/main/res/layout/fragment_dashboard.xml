<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DashboardFragment">




    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_teal"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white">



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>






    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textforfunction"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/donegal_one"
        android:hint="EMI Functions"
        android:padding="10dp"
        android:textColorHint="@color/dark_teal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />


    <com.google.android.material.card.MaterialCardView

        android:id="@+id/emifunctioncardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textforfunction"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textforfunction"
        app:strokeColor="@color/light_teal"
        app:strokeWidth="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/emicalculates_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_baseline_calculate_24"
                android:fontFamily="@font/donegal_one"
                android:gravity="center"
                android:hint="Calculates"
                android:padding="10dp"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/compareloan_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_versus"
                android:fontFamily="@font/donegal_one"
                android:gravity="center"
                android:hint="Compare Loan"
                android:padding="10dp"
                android:textSize="18sp" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textforCurrencyConventer"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emifunctioncardview"
        android:layout_margin="10dp"
        android:fontFamily="@font/donegal_one"
        android:hint="Currency Converter"
        android:padding="10dp"
        android:textColorHint="@color/dark_teal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emifunctioncardview" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currencyconverter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textforCurrencyConventer"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textforCurrencyConventer"
        app:strokeColor="@color/light_teal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        app:strokeWidth="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:padding="10dp"
            android:weightSum="2">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/currencyconverter_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_currency"
                android:fontFamily="@font/donegal_one"
                android:gravity="center"
                android:hint="Currency converter"
                android:padding="10dp"
                android:textSize="18sp" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/depositfunction"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emifunctioncardview"
        android:layout_margin="10dp"
        android:fontFamily="@font/donegal_one"
        android:hint="Bank Function"
        android:padding="10dp"
        android:textColorHint="@color/dark_teal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyconverter" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bank_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textforCurrencyConventer"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depositfunction"
        app:strokeColor="@color/light_teal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        app:strokeWidth="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/rd_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_fixed"
                android:fontFamily="@font/donegal_one"
                android:gravity="center"
                android:hint="RD Calculates"
                android:padding="10dp"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fd_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_fixed"
                android:fontFamily="@font/donegal_one"
                android:gravity="center"
                android:hint="FD Calculates"
                android:padding="10dp"
                android:textSize="18sp" />




        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>