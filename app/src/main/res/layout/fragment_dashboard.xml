<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DashboardFragment">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textforfunction"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="EMI Functions"
        android:padding="10dp"
        android:textColorHint="@color/light_orange"
        android:textSize="18sp" />


    <com.google.android.material.card.MaterialCardView

        android:id="@+id/emifunctioncardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textforfunction"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"

        app:strokeWidth="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/emicalculates_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_baseline_calculate_24"
                    android:hint="Calculates"
                    android:padding="10dp"
                    android:drawableTint="@color/light_orange"

                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/compareloan_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_versus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:gravity="center"
                    android:hint="Compare Loan"
                    android:padding="10dp"

                    android:textSize="18sp" />
            </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textforCurrencyConventer"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Currency Converter"
        android:padding="10dp"
        android:layout_below="@id/emifunctioncardview"
        android:textColorHint="@color/light_orange"
        android:textSize="18sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currencyconverter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textforCurrencyConventer"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:strokeWidth="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/currencyconverter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:gravity="center"
            android:drawableTop="@drawable/ic_currency"
            android:hint="Currency converter"
            android:padding="10dp"
            android:drawableTint="@color/light_orange"

            android:textSize="18sp" />



    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>